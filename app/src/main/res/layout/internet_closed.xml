<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl"
    android:background="@drawable/ic_signal_cellular_connected_no_internet_0_bar_black_24dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvControl"
        android:gravity="center_horizontal"
        android:textSize="40sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_gravity="center"
        android:text="Control  Internet Please..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <Button
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_dark"
        android:id="@+id/btnYenidenDeneyin"
        android:text="Yeniden Deneyin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>