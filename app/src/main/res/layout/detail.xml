<?xml version="1.0" encoding="utf-8"?>

<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/cardview"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_ev_fiyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_green_light"
                android:text="Fiyat"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageView
                android:id="@+id/home_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvIliBilgi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#80EE0000"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:lines="1"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvEvAciklamaBilgi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_margin="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Emlak tipi:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:textStyle="bold"
                        android:layout_marginLeft="10sp"
                        android:textSize="15sp"
                        android:id="@+id/tvEmlakTipiBilgi"
                        android:text="e.tioi:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>



                <LinearLayout
                    android:layout_margin="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Evin Alanı :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:textStyle="bold"
                        android:layout_marginLeft="10sp"
                        android:textSize="15sp"
                        android:id="@+id/tvEvAlaniBilgi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>



                <LinearLayout
                    android:layout_margin="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Bina Yaşı:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:textStyle="bold"
                        android:layout_marginLeft="10sp"
                        android:textSize="15sp"
                        android:id="@+id/tvBinaYasiBilgi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:layout_margin="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Oda Sayisi:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:textStyle="bold"
                        android:layout_marginLeft="10sp"
                        android:textSize="15sp"
                        android:id="@+id/tvOdaSayisiBilgi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                

                <LinearLayout
                    android:layout_margin="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Bulunduğu Kat :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView

                        android:textStyle="bold"
                        android:layout_marginLeft="10sp"
                        android:textSize="15sp"
                        android:id="@+id/tv_bulunduguKatBilgi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>




                <LinearLayout
                    android:layout_margin="1sp"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView

                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:id="@+id/img2"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />


                    <ImageView
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:id="@+id/img3"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <ImageView

                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:id="@+id/img4"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

    
</ScrollView>